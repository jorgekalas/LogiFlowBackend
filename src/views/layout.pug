doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title LogiFlow
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        background: #f9f9f9;
        color: #333;
      }
      header {
        background: #1e88e5;
        color: white;
        padding: 10px 20px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      header h1 {
        margin: 0;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        gap: 10px;
      }
      nav a {
        color: white;
        text-decoration: none;
        margin-left: 15px;
        font-weight: bold;
      }
      nav a:hover {
        text-decoration: underline;
      }
      main {
        max-width: 900px;
        margin: 30px auto;
        padding: 20px;
        background: white;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      }
      .btn {
        display: inline-block;
        padding: 6px 12px;
        margin: 4px 0;
        border-radius: 5px;
        font-size: 14px;
        cursor: pointer;
        border: none;
      }
      .btn-add {
        background: #43a047;
        color: white;
      }
      .btn-edit {
        background: #fbc02d;
        color: black;
      }
      .btn-delete {
        background: #e53935;
        color: white;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
      }
      th, td {
        padding: 10px;
        border: 1px solid #ccc;
        text-align: left;
      }
      th {
        background: #eeeeee;
      }
      tr:nth-child(even) {
        background: #f5f5f5;
      }
      tr:hover {
        background: #e3f2fd;
      }
  body
    header
      h1 LogiFlow 
      nav
        a(href="/") Inicio
        a(href="/shipments") Repartidores
        a(href="/clients") Admin
    main
      block content
