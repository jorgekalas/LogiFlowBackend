doctype html 
html 
  head 
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title LogiFlow

    // Bootstrap CSS
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css")

    // Font Awesome
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css")

    style.
      body {
        background: #f8f9fa;
        color: #333;
      }
      header {
        background: #1e88e5;
      }
      header .navbar-brand {
        font-weight: bold;
        font-size: 1.4rem;
      }
      main {
        margin-top: 30px;
      }
      .topbar {
        background: #f1f3f5;
        padding: 8px 20px;
        border-bottom: 1px solid #dee2e6;
      }
      .topbar span {
        font-size: 0.95rem;
      }

  body
    // Barra superior: solo si hay sesión activa
    if session && session.user
      .topbar.d-flex.justify-content-between.align-items-center
        span.text-muted Hola, #{session.user.username}
        a.btn.btn-outline-danger.btn-sm(href="/logout")
          i.fa-solid.fa-right-from-bracket.me-1
          |  Cerrar sesión

    // Navbar
    header
      nav.navbar.navbar-expand-lg.navbar-dark
        .container
          a.navbar-brand(href="/") LogiFlow
          button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav")
            span.navbar-toggler-icon
          #navbarNav.collapse.navbar-collapse
            ul.navbar-nav.ms-auto
              li.nav-item
                a.nav-link(href="/") Inicio
              li.nav-item
                a.nav-link(href="/shipments") Envíos
              li.nav-item
                a.nav-link(href="/clients") Clientes
              li.nav-item
                a.nav-link(href="/products") Productos
              li.nav-item
                a.nav-link(href="/invoices") Facturas

    // Contenido principal
    main.container
      block content

    // Bootstrap JS
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js")
