extends ../layout

block content
  h2.mb-4 Lista de Clientes

  a.btn.btn-success.mb-3(href="/clients/new") Nuevo Cliente

  table.table.table-striped.table-bordered
    thead.table-dark
      tr
        th Nombre
        th Apellido
        th DNI
        th Email
        th Tel√©fono
        th Acciones
    tbody
      each client in clients
        tr
          td= client.name
          td= client.lastName
          td= client.dni
          td= client.email
          td= client.phone
          td
            a.btn.btn-warning.btn-sm.me-1(href=`/clients/${client._id}/edit`) Editar
            form.d-inline(method="post", action=`/clients/${client._id}?_method=DELETE`)
              button.btn.btn-danger.btn-sm(type="submit") Eliminar
