extends ../layout

block content
  h2.mb-4 Nuevo Cliente

  if error
    .alert.alert-danger.text-center #{error}

  form(method="post", action="/clients")

    .mb-3
      label.form-label(for="name") Nombre
      input.form-control#name(type="text", name="name", required, value=(formData && formData.name) || "")

    .mb-3
      label.form-label(for="lastName") Apellido
      input.form-control#lastName(type="text", name="lastName", required, value=(formData && formData.lastName) || "")

    .mb-3
      label.form-label(for="dni") DNI
      input.form-control#dni(type="text", name="dni", required, value=(formData && formData.dni) || "")

    .mb-3
      label.form-label(for="email") Email
      input.form-control#email(type="email", name="email", required, value=(formData && formData.email) || "")

    .mb-3
      label.form-label(for="phone") Tel√©fono
      input.form-control#phone(type="text", name="phone", value=(formData && formData.phone) || "")

    button.btn.btn-success(type="submit") Guardar
    a.btn.btn-secondary.ms-2(href="/clients") Cancelar
